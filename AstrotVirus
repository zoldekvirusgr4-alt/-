local ASTConn=nil
Tab_Taf3eel:AddToggle({
	Name="AST",
	Default=false,
	Callback=function(on)
		local lp=game.Players.LocalPlayer
		if ASTConn then
			ASTConn:Disconnect()
			ASTConn=nil
			if lp.Character and lp.Character:FindFirstChild("Humanoid") then
				lp.Character.Humanoid.PlatformStand=false
			end
		end
		if not on then return end
		if not SelectedPlayer or not SelectedPlayer.Character or not lp.Character then return end

		local tHRP=SelectedPlayer.Character:WaitForChild("HumanoidRootPart")
		local lHRP=lp.Character:WaitForChild("HumanoidRootPart")
		local lHum = lp.Character:WaitForChild("Humanoid")

		lHum.PlatformStand=true -- ØªØ¹Ø·ÙŠÙ„ Ø§Ù„Ø¬Ø§Ø°Ø¨ÙŠØ©

		local speed = 20 -- Ø³Ø±Ø¹Ø© Ø­Ø±ÙƒØ© Ø£Ù…Ø§Ù…/Ø®Ù„Ù
		local distance = 5 -- Ù…Ø³Ø§ÙØ© Ø§Ù„Ø­Ø±ÙƒØ© Ø£Ù…Ø§Ù…/Ø®Ù„Ù

		ASTConn = RunService.RenderStepped:Connect(function(dt)
			if not tHRP or not lHRP then return end

			-- Ø§ØªØ¬Ø§Ù‡ Ù†Ø¸Ø± Ø§Ù„Ù„Ø§Ø¹Ø¨ Ø§Ù„Ù…Ø­Ø¯Ø¯
