local SelectedPlayer = nil
local function FindByPartial(name)
	name = name:lower()
	for _,p in pairs(game.Players:GetPlayers()) do
		if p.Name:lower():sub(1,#name)==name then return p end
	end
end

Tab_Taf3eel:AddTextbox({
	Name="Ø§Ø³Ù… Ø§Ù„Ù„Ø§Ø¹Ø¨",
	TextDisappear=true,
	Callback=function(v)
		local p = FindByPartial(v)
		if p then
			SelectedPlayer = p
			OrionLib:MakeNotification({Name="ØªÙ… Ø§Ù„ØªØ­Ø¯ÙŠØ¯",Content=p.Name,Time=3})
		end
	end
})

